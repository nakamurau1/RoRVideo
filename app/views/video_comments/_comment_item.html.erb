<div class="comment">
  <span class="user">
    <%= link_to comment_item.user.name, comment_item.user %>
  </span>
  <span class="content"><%= comment_item.comment %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment_item.created_at) %> ago.
  </span>
  <% if current_user?(comment_item.user) %>
    <%= link_to "削除", comment_item, method: :delete,
                                        data: { confirm: "コメントを削除しますか?" },
                                        title: comment_item.comment %>
  <% end %>
</div>