<% provide(:title, @list.name) %>
<h2><%= @list.name %></h2>
<p><%= @list.comment %></p>
<div class="container">
	<% if signed_in? && current_user?(@list.user) %>
		<%= link_to "編集", edit_list_path(@list), :class => "btn btn-lg btn-primary btn-right" %>
	<% end %>
</div>

<%= render 'follow_list_form', list: @list %>

<div class="videos">
	<div id="videos_in_list">
		<%= render 'video_list' %>
	</div>
</div>
